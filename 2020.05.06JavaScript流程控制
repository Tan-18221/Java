<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>特殊语法</title>
    <style>
        td{
            border: 1px solid;
        }
    </style>
    <script>
        //语句以分号结尾，如果一行只有一条语句则分号可以省略
        var a=3;
        alert(a);
        /*
        变量的定义使用var关键字，也可以不使用
        用：定义的变量是局部变量
        不用：定义的变量是全局变量
         */
        var b=4;
        //case 可以加任意数据类型
        switch (b) {
            case 4:
                alert("num");
                break;
            case "abc":
                alert("bnnn");
        }
        document.write("<table align='center'>");
        for (var i = 0; i < 9; i++) {
            document.write("<tr>");
            for (var j = 1; j <=i ; j++) {
                document.write("<td>");
                document.write(i+"*"+j+"="+(i*j)+"&nbsp");
                document.write("</td>");
            }
            document.write("</tr>");

        }
        document.write("</table>")
    </script>
</head>
<body>

</body>
</html>
