package ta;
import java.util.Arrays;
/*
public static string toString(数组）: Arrays.toString 将参数数组变成字符串（按照默认格式：【元素1，元素2】
public static void sort(数组）：按照升序，对数组元素进行排序
 */
public class tu {
    public static void main(String[] args) {
        int[] array={10,20,30};
        String ints= Arrays.toString(array);
        System.out.println(ints);

        Arrays.sort(array);//排序
        System.out.println(Arrays.toString(array));//省去了遍历操作
    }
    }
    
 package ta;
/*
public static double abs(double num)； Math.abs() 获取绝对值
public static double ceil(double num);Math.ceil()向上取整，
public static double floor(double num);Math.floor()向下取整//不是四舍五入
public static long round(double num);Math.round()四舍五入
 */
public class tu {
    public static void main(String[] args) {
        //获取绝对值
        System.out.println(Math.abs(-2));
        //向上取整
        System.out.println(Math.ceil(6.1));
        //向下取整 抹零
        System.out.println(Math.floor(6.9));
        //四舍五入
        System.out.println(Math.round(8.7));

    }
    }
